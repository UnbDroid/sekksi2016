	tempo_antigo = tempo_atual;
   	tempo_atual = CurrentTick();
   	gyro_antigo = gyro_atual;
	gyro_atual = SensorHTGyro(GYRO);
	error = gyro_atual - ref;
	dt = (tempo_atual - tempo_antigo)/1000.0;
	dW = gyro_atual - gyro_antigo;

	//proporcional
	fator_proporcional = KP*(error);
	potdGlobal -= fator_proporcional;
	poteGlobal += fator_proporcional;

	//integrativo
	
    fator_integrante += KI*error*dt;
   	potdGlobal -= fator_integrante;
	poteGlobal += fator_integrante;

 
   	//derivativo
	fator_derivativo = KD*(dW/dt);
  	potdGlobal -= fator_derivativo;
	poteGlobal += fator_derivativo;

	//saturação
	if(potdGlobal < 70)
	   potdGlobal = 70;
	else if(potdGlobal > 90)
	   potdGlobal = POTENCIA_RETO_DIREITA;

	if(poteGlobal < 70)
	   poteGlobal = 70;
	else if(poteGlobal > 90)
	   poteGlobal = POTENCIA_RETO_ESQUERDA;
}

void AndaFrente()
{
	RegulaComGyro();

	MyOnFwd(MD, potdGlobal);
  	MyOnFwd(ME, poteGlobal);
   	Wait(100);
}

void SeguindoRota()
{
	int distancia_media;

	int aux_dir;

	distancia_media = distanciaTachoCount(MediaTC());

	if(distancia_media <= (100*TAMANHO_DA_ARENA)/5)
	{
		if((distancia_media >= (100*TAMANHO_DA_ARENA)/(5*2))&&(!progredi_na_tabela))
		{
			AndaNaTabela();
			progredi_na_tabela = 1;
			if(NumeroOndeEstou() == -1)
			{
				tabelaPP();
			}
		}

		AndaFrente();
	}
	else
	{

		Wait(200);//nao há colher
		MandaStop();

		aux_dir = direcao;

		if(caminho[contPassos] == -1)
		{
			CalculaVolta();
		}

		girarCardeal(caminho[contPassos]);

		contPassos++;
		MyResetTachoCount(MD);
		MyResetTachoCount(ME);
		MyTcD = 0;
		MyTcE = 0;

		progredi_na_tabela = 0;

		MandaStart();

		if(aux_dir != direcao)//se mudou a direção
		{
			Wait(200);
			MandaCalibra();
			poteGlobal = POTENCIA_RETO_ESQUERDA;
			potdGlobal = POTENCIA_RETO_DIREITA;
			reset_controle();
		}

	}
}

void SairCasa()
{
	int ht, luz;
	int distancia_esquerda, distancia_direita;

	OnFwd(MD,POTENCIA_RETO_DIREITA);
	OnFwd(ME,POTENCIA_RETO_ESQUERDA);

	ht=SensorHTColorNum(HT);
    luz=Sensor(SLUZ);
	while(!(((ht==HTBRANCO1)||(ht==HTBRANCO2))&&((luz>LUZ_BRANCO_MIN)&&(luz<LUZ_BRANCO_MAX))))//enquanto akgum dos dois sensores for diferente de branco
	{
		ht=SensorHTColorNum(HT);
    	luz=Sensor(SLUZ);
	}
	Wait(400);
	alinha(PARA_TRAS);

	potdGlobal = POTENCIA_RETO_DIREITA;
	poteGlobal = POTENCIA_RETO_ESQUERDA;
	distancia_esquerda = 7+(j_global*TAMANHO_DA_ARENA)/5;
	distancia_direita = TAMANHO_DA_ARENA -(distancia_esquerda + DISTANCIA_ENTRE_OS_SENSORES);

	MyResetTachoCount(MD);
	MyResetTachoCount(ME);
	MyTcD = 0;
	MyTcE = 0;

	reset_controle();

	while((distanciaTachoCount(MediaTC()) <= (100*30)))
	{
		AndaFrente();
	}

	Off(MD);
	Off(ME);
}

