float GetGyroOffset() { // FUNCIONANDO (chamar com os motores desligados)
  float gyro_sum = 0, i;

  for(i = 0; i < OFFSET_SAMPLES; ++i)
  {
    gyro_sum += SensorHTGyro(GYRO);
  }

  return gyro_sum/OFFSET_SAMPLES;
}

